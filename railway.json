{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": ["src/**", "requirements.txt", "Dockerfile"]
  },
  "deploy": {
    "startCommand": "/bin/sh -c 'uvicorn api.main:app --host 0.0.0.0 --port $PORT --loop asyncio'",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE"
  }
}
